<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://th.bing.com/th/id/OIP.L-EVHfVTfmyDfRILwz_cSQHaEK?cb=iwc2&rs=1&pid=ImgDetMain);">
  <div class="container">
    <h1>Lists <strong></h1>
    </div>
  </div>
  <div class="container mt-3 d-flex-justify">
    <ul >
      <%@lists.each do |list|  %>
        <li><%=link_to "#{list.name}", list_path(list), class:"btn btn-primary mt-3"  %></li>
        <%# <li></label><%= cl_image_tag(list.photo.key, height: 300, width: 400, crop: :fill)%>
        <% if list.photo.attached? %>
          <%= cl_image_tag(list.photo.key, height: 300, width: 400, crop: :fill) %>
        <% else %>
          <%= image_tag 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU' %>
        <% end %>
      <% end %>
    </ul>
    <%= link_to "Add list", new_list_path, class: "btn btn-secondary"  %>
  </div>
