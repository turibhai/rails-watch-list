<div class="container m-3">
  <div>
    <h1><%= "#{@list.name} movies"%></h1>
    <h2>Bookmark</h2>
  </div>
  <div class="cards-category" >
    <% @list.bookmarks.each do |bookmark| %>
      <div><strong><%= "#{bookmark.movie.title}" %></strong></div>
      <div class="card-trip m-3">, <%= image_tag("#{bookmark.movie.poster_url}") %></div>
      <div class="m-3 d-flex justify-content-between align-items-center">
        <div><%= "#{bookmark.comment}"  %></div>
        <%= link_to bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "delete?" } do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= link_to "Back", lists_path, class: "btn btn-secondary mt-3"  %>
  <%= link_to "Add Bookmark", new_list_bookmark_path(@list), class: "btn btn-secondary mt-3"  %>
</div>
