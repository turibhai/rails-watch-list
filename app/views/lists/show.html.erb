<div class="container">
  <h1><%= "#{@list.name} movies"%></h1>
  <h2>Bookmark</h2>
  <div class="cards-category" >
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-trip">, <%= image_tag("#{bookmark.movie.poster_url}", width: 400, height: 250, crop: :fill) %></div>
      <%= "#{bookmark.movie.title}" %>
      <%=  "#{bookmark.comment}"  %>
      <%= link_to "delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "delete?" }, class: 'btn btn-danger' %>
    <% end %>
  </div>
  <%= link_to "Back", lists_path, class: "btn btn-secondary mt-3"  %>
  <%= link_to "Add Bookmark", new_list_bookmark_path(@list), class: "btn btn-danger mt-3"  %>
</div>
